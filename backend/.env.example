APP_NAME="Pre-IPO SIP"
APP_ENV=local
APP_KEY=
# SECURITY: Set to false in production to prevent information disclosure
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=preipo_sip
DB_USERNAME=root
DB_PASSWORD=

# Database Query Performance Monitoring
DB_QUERY_MONITORING_ENABLED=false
DB_SLOW_QUERY_THRESHOLD=1000
DB_N_PLUS_ONE_THRESHOLD=10

BROADCAST_CONNECTION=log
CACHE_STORE=redis
CACHE_PREFIX=preiposip_cache
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=database
SESSION_LIFETIME=120

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

RAZORPAY_KEY=
RAZORPAY_SECRET=
# SECURITY NOTE: Webhook secrets should ideally be stored in database settings table
# Use setting() helper instead of env() in production for better security
RAZORPAY_WEBHOOK_SECRET=

FRONTEND_URL=http://localhost:3000

# SMS Settings
SMS_PROVIDER=twilio
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# DigiLocker OAuth
DIGILOCKER_CLIENT_ID=
DIGILOCKER_CLIENT_SECRET=
DIGILOCKER_REDIRECT_URI="${APP_URL}/api/v1/kyc/digilocker/callback"

# Social Login
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT="${APP_URL}/api/v1/auth/google/callback"

# Laravel Telescope
TELESCOPE_ENABLED=false

# Sentry Error Tracking (Optional)
# Get your DSN from https://sentry.io/
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
